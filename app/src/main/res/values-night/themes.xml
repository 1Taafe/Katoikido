<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Katoikido" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fui_linkColor</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fui_linkColor</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryContainer">@color/fui_linkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/fui_linkColor</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>
        <item name="fontFamily">@font/exo2</item>
    </style>

    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/fui_linkColor</item>
    </style>

</resources>